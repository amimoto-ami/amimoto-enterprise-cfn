            },
            {
              "TargetOriginId": {
                "Ref": "AWS::StackName"
              },
              "ViewerProtocolPolicy": "allow-all",
              "ForwardedValues": {
                "Headers": [
                  "Host"
                ],
                "Cookies": {
                  "Forward": "none"
                },
                "QueryString": "true"
              },
              "PathPattern": "/wp-content/*",
              "SmoothStreaming": "false",
